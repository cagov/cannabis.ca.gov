<!doctype html>
<html lang="en">
<head>
  <title>{{ data.og_meta.page_title }}</title>
  <link rel="preload" href="/fonts/publicsans-bold-webfont.woff2" as="font" type="font/woff2" crossorigin ></link>
  <link rel="preload" href="/fonts/publicsans-regular-webfont.woff2" as="font" type="font/woff2" crossorigin ></link>
  <meta charset="utf-8">
  <meta name="author" content="State of California" />
  <meta name="description" content="{{ data.og_meta.page_description | striptags }}" />
  <meta name="keywords" content="California, government, {{ data.og_meta.keywords | striptags }}" />
  <!-- http://t.co/dKP3o1e -->
  <meta name="HandheldFriendly" content="True">
  <!-- for Blackberry, AvantGo -->
  <meta name="MobileOptimized" content="320">
  <!-- for Windows mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
	{# <!-- Google Meta-->
	<meta name="google-site-verification" content="account_number" /> #}
  <!-- OG tags -->
  <link rel="canonical" href="{{ data.og_meta.canonical_url | changeDomain(domain) }}" />
  <meta property="og:url" content="{{ data.og_meta.canonical_url | changeDomain(domain) }}" />
  <meta property="og:description" content="{{ data.og_meta.open_graph_description | striptags }}" />
  <meta property="og:title" content="{{ data.og_meta.open_graph_title }}" />
  <meta property="og:type" content="website" />
  <meta property="og:image" content="{{ data.og_meta.page_social_image_url | changeDomain(domain) }}" />
  <meta property="og:image:width" content="{{ data.og_meta.page_social_image_width }}" />
  <meta property="og:image:height" content="{{ data.og_meta.page_social_image_height }}" />
  <meta property="og:image:alt" content="{{ data.og_meta.page_social_image_alt }}" />
  <meta property="og:locale" content="en_US" />
  <meta property="og:site_name" content="{{ data.og_meta.site_name }}" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{ data.og_meta.twitter_title }}" />
  <meta name="twitter:image" content="{{ data.og_meta.page_social_image_url | changeDomain(domain) }}" />
  <meta name="twitter:image:width" content="{{ data.og_meta.page_social_image_width }}" />
  <meta name="twitter:image:height" content="{{ data.og_meta.page_social_image_height }}" />

  <!-- Favicon @TODO needs asset folder to be exposed to docs -->
  <link title="fav icon" rel="icon" href="/assets/cagov_favicon.ico">
  <link rel="shortcut icon" href="/assets/cagov_favicon.ico">
  <!-- Google Analytics performance -->
  <link rel="preconnect" href="https://www.google-analytics.com/">
  <!-- CSS -->
  {% set css %}
  {% include "../../../../dist/index.css" %}
  {% endset %}
  <!-- the inlined hardcoded grid css below is there because it was breaking sass compilation -->
  <style>
    {{ css | cssmin | safe }}
    .cagov-grid {
      grid-template-columns: repeat(auto-fit, minmax(min(376px, 100%), 1fr));
    }
  </style>
</head>

<body>
  <header>
    <div id="skip-to-content"><a href="#body-content">Skip to content</a></div>
    <div class="header-container">
      {% include "utility-header.njk" %}
      {% include "branding.njk" %}
      {% include "nav-component.njk" %}
    </div>
  </header>
  {% block content %}
    {{ content | safe }}
  {% endblock %}

  <div class="footer-container">
    {% include "footer.njk" %}
    {% include "footer-universal.njk" %}
  </div>

  {% set js %}
  {% include "../../../../dist/built.js" %}
  {% endset %}
  <script type="module">
    {{ js | safe }}
  </script>
</body>

</html>