<!doctype html>
<html lang="en">
<head>
  <title>{{ page_meta.page_title | safe }}</title>
  <meta charset="utf-8">
	<meta name="author" content="State of California" />
	<meta name="description" content="{{ page_meta.page_description | safe }}" />
	<meta name="keywords" content="California, government, drought, drought.ca.gov" />
	<!-- http://t.co/dKP3o1e -->
	<meta name="HandheldFriendly" content="True">
	<!-- for Blackberry, AvantGo -->
	<meta name="MobileOptimized" content="320">
	<!-- for Windows mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
	{# <!-- Google Meta-->
	<meta name="google-site-verification" content="account_number" /> #}
  <!-- OG tags -->
  <link rel="canonical" href="{{ page_meta.canonical_url | safe }}" />
  {# {{ page_meta.og_meta | safe }} #}
  {# more properties required for FB sharing #}
  <meta property="og:url" content="{{ page_meta.canonical_url | safe }}" />
  <meta property="og:description" content="{{ page_meta.page_description | safe }}" />
  <meta property="og:title" content="{{ page_meta.page_title | safe }}" />
  <meta property="og:type" content="website" />
  <meta property="og:image" content="{{ page_meta.image.url | safe }}" />
  {# <meta property="og:image:alt" content="{{ page_meta.image.alt | safe }}" /> #}
  <meta property="og:image:width" content="{{ page_meta.image.width | safe }}" />
  <meta property="og:image:height" content="{{ page_meta.image.height | safe }}" />
  <meta property="og:locale" content="en_US" />
  <meta property="og:site_name" content="{{ page_meta.site_title | safe }}" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{ page_meta.page_title | safe }}" />
  <meta name="twitter:image" content="{{ page_meta.image.url | safe }}" />
  <meta name="twitter:image:width" content="{{ page_meta.image.width | safe }}" />
  <meta name="twitter:image:height" content="{{ page_meta.image.height | safe }}" />

  <link title="Fav Icon" rel="icon" href="/media/sites/2/2021/07/cannabis_favicon_16x16.png">
  <link rel="shortcut icon" href="/media/sites/2/2021/07/cannabis_favicon_16x16.png">

  <!-- Google Analytics performance -->
  <link rel="preconnect" href="https://www.google-analytics.com/">
  <!-- CSS -->
  {% set css %}
  {% include "../../../../dist/index.css" %}
  {% endset %}
  <!-- the inlined hardcoded grid css below is there because it was breaking sass compilation -->
  <style>
    {{ css | cssmin | safe }}
    .cagov-grid {
      grid-template-columns: repeat(auto-fit, minmax(min(376px, 100%), 1fr));
    }
  </style>
</head>

<body>

  <div class="header-container">
    {% include "../../../components/utility-header/utility-header.html" %}
    {% include "../../../components/branding/branding.html" %}
    {% include "nav-component.njk" %}
  </div>

  {# Landing is not the same as homepage, it could also be a category or other menu landing. Optimized for many blocks layouts. #}
  {%- if templatestring == 'landing' -%}
    {% include "../layouts/templates/landing.njk" %}
  {# Search results #}
  {%- elif templatestring == 'search' -%}
    {% include "../layouts/templates/search.njk" %}  
  {# Pages that don't have content navigation #}
  {%- elif templatestring == 'template-page-single-column' -%}
    {% include "../layouts/templates/single-column.njk" %}  
  {# Normal page template, with content nav and breadcrumb, if default the API will return "page" #}
  {% elif templatestring == 'page' -%}
    {% include "../layouts/templates/page.njk" %}
  {# Normal post template, with category if default the API will return "post" #}
  {% elif templatestring == 'post' -%}
    {% include "../layouts/templates/post.njk" %}
  {% elif templatestring == 'template-single-press-release ' -%}
  {# We are developing more templates for special post types, like press releases and events. #}
    {% include "../layouts/templates/post.njk" %}
  {# No template #}
  {% else %}
    {% include "../layouts/templates/landing.njk" %}
  {%- endif -%}

  {% include "../footer.njk" %}
  {% include "../footer-universal.njk" %}

  {% set js %}
  {% include "../../../../dist/built.js" %}
  {% endset %}
  <script type="module">
    {{ js | safe }}
  </script>
</body>

</html>