{
  "name": "cagov-design-system",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "build": "npm-run-all -s js:bundle sass:build build:regen",
    "build:regen": "npx @11ty/eleventy --quiet",
    "dev": "npm-run-all -p sass:build js:bundle sass:watch js:watch start",
    "js:watch": "chokidar 'src/**/*.js' -c 'npm run js:bundle && npm run build:regen'",
    "js:bundle": "rollup --config rollup.config.js",
    "sass:compile": "node-sass --source-map true src/css/sass/ -o dist/",
    "sass:build": "npm run sass:compile",
    "sass:watch": "chokidar 'src/**/*.scss' -c 'npm run sass:build && npm run build:regen'",
    "start": "npx @11ty/eleventy --quiet --serve",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:cypress:tool": "npx cypress open",
    "test:cypress": "npm-run-all test:server:background test:cypress:tool",
    "test:playwright": "npm-run-all test:server:background test",
    "test:playwright:headed": "npm-run-all test:server:background test:headed",
    "test:server": "npx web-dev-server --root-dir docs/",
    "test:server:background": "npx web-dev-server --root-dir docs/ &",
    "test:setup": "npx playwright install-deps chromium && npx playwright install",
    "wordpress-bundle:all": "rollup --config src/js/wordpress/rollup.config.js",
    "wordpress-bundle:accordion": "rollup --config src/js/wordpress/rollup.accordion.config.js",
    "wordpress-bundle": "npm run wordpress-bundle:accordion && npm run wordpress-bundle:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@playwright/test": "^1.14.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@web/dev-server": "^0.1.22",
    "autoprefixer": "^10.2.5",
    "axe-core": "^4.3.3",
    "axe-playwright": "^1.1.8",
    "chokidar-cli": "^2.1.0",
    "clean-css": "^5.1.2",
    "cypress": "^8.3.1",
    "cypress-axe": "^0.13.0",
    "node-fetch": "^2.6.1",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.52.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "@cagov/ds-accordion": "^1.0.6",
    "@cagov/ds-base-css": "^1.0.1",
    "@cagov/ds-branding": "^1.0.2",
    "@cagov/ds-card-grid": "^1.0.2",
    "@cagov/ds-content-navigation": "^1.0.3",
    "@cagov/ds-dropdown-menu": "^1.0.11",
    "@cagov/ds-feature-card": "^1.0.2",
    "@cagov/ds-feedback": "^1.0.1",
    "@cagov/ds-google-translate": "^1.0.0",
    "@cagov/ds-minus": "^1.0.0",
    "@cagov/ds-pagination": "^1.0.0",
    "@cagov/ds-pdf-icon": "^1.0.0",
    "@cagov/ds-plus": "^1.0.0",
    "@cagov/ds-skip-to-content": "^1.0.0",
    "@cagov/ds-statewide-footer": "^1.0.0",
    "@cagov/ds-statewide-header": "^1.0.6",
    "@cagov/ds-step-list": "^1.0.1"
  }
}
